@model Gestao.Models.EsqueciSenhaModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Esqueceu a Senha</title>
    <style>
        .container {
            width: 100%;
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                display: block;
                font-weight: bold;
            }

            .form-group input {
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

                .form-group input[type="submit"] {
                    background-color: #d1b3ff;
                    color: #000;
                    font-weight: bold;
                    cursor: pointer;
                }

                    .form-group input[type="submit"]:hover {
                        background-color: #b58cff;
                    }

        .text-danger {
            color: #a94442;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Esqueceu a Senha</h2>
        <form asp-controller="EsqueciSenha" asp-action="EnviarEmail" method="post">
            <div class="form-group">
                <label for="Email">Email:</label>
                <input type="email" id="Email" name="Email" asp-for="Email" required />
            </div>
            <div class="form-group">
                <input type="submit" value="Enviar Email" />
            </div>
            @if (ViewData.ModelState.ContainsKey("Email"))
            {
                <div class="text-danger">@ViewData.ModelState["Email"].Errors.First().ErrorMessage</div>
            }
            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <div class="text-danger">@Html.ValidationSummary()</div>
            }
        </form>
    </div>
</body>
</html>
